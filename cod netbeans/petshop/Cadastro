    private void campomatriculaActionPerformed(java.awt.event.ActionEvent evt) {                                               

    }                                              

    private void CadastrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        
        if(SelecionaCachorro.isSelected()){
            Cachorro c = new Cachorro();
            c.setNome(camponome.getText());
            c.setMatricula(Integer.parseInt(campomatricula.getText()));
            c.setIdade(Integer.parseInt(campoidade.getText()));        
            c.setCor_pelagem(campocor.getText());
            c.setGenero(campogenero.getText());
            c.setPeso(Integer.parseInt(campopeso.getText()));
            c.setEstilo_rabo(campoestilorabo.getText());
            c.setFocinheira(SlideFucinheira.getValueIsAdjusting());
            c.setCastrado(SlideCastrado.getValueIsAdjusting());
            
            JOptionPane.showMessageDialog(null, "Cadastrado com sucesso");
        }else{
            JOptionPane.showMessageDialog(null, "Selecione uma raça");
        }
        
        
    }                                         

    private void SelecionaCachorroActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        Cadastro jframe = new Cadastro();
        
        if(SelecionaCachorro.isSelected()){
            jLabel10.setVisible(true);
            campoestilorabo.setVisible(true);
            jLabel11.setVisible(true);
            SlideCastrado.setVisible(true);
            jLabel12.setVisible(true);
            SlideFucinheira.setVisible(true);
            
            jframe.setSize(374, 410);
        }else{
            jLabel10.setVisible(false);
            campoestilorabo.setVisible(false);
            jLabel11.setVisible(false);
            SlideCastrado.setVisible(false);
            jLabel12.setVisible(false);
            SlideFucinheira.setVisible(false);
            
            jframe.setSize(374, 300);

        }
    }                                                 

    private void RemoverActionPerformed(java.awt.event.ActionEvent evt) {                                        

    }                                       

    private void ListarActionPerformed(java.awt.event.ActionEvent evt) {                                       
        String mensagem = "Animais:\n";
        mensagem += "nome: ";
        mensagem += "matricula: ";
        mensagem += "genero: ";
        mensagem += "idade: ";
        mensagem += "cor da pelagem: ";
        mensagem += "peso: ";
        mensagem += "estilo rabo: ";
        mensagem += "Fucinheira: ";
        mensagem += "Castrado: ";
        
        JOptionPane.showMessageDialog(null, mensagem);
    }                                      

